{
  "server": {
    "host": "0.0.0.0",
    "port": 8081,
    "auto_detect_ip": true,
    "fallback_ip": "192.168.1.57",
    "description": "前端静态文件服务器配置，支持自动IP检测"
  },
  "frontend": {
    "paths": [
      "D:\\DMS-QA server\\frontend",
      "./frontend",
      "../frontend",
      "../../frontend"
    ],
    "index_file": "index.html",
    "spa_mode": true,
    "api_proxy": {
      "enabled": true,
      "backend_port": 3001,
      "auto_detect_backend": true,
      "description": "自动检测后端服务地址"
    },
    "description": "前端文件路径配置，按优先级排序"
  },
  "cors": {
    "enabled": true,
    "allow_origin": "*",
    "allow_methods": "GET, POST, PUT, DELETE, OPTIONS",
    "allow_headers": "Content-Type, Authorization, X-Requested-With",
    "max_age": 86400,
    "description": "CORS跨域配置"
  },
  "cache": {
    "html_cache": "no-cache",
    "static_cache": 3600,
    "asset_cache": 86400,
    "description": "缓存策略配置（秒）"
  },
  "logging": {
    "enabled": true,
    "format": "[{timestamp}] {client_ip} - {method} {path} {status}",
    "timestamp_format": "%Y-%m-%d %H:%M:%S",
    "description": "日志配置"
  },
  "security": {
    "prevent_directory_traversal": true,
    "max_file_size": 104857600,
    "allowed_extensions": [
      ".html", ".htm", ".js", ".mjs", ".css", ".json",
      ".png", ".jpg", ".jpeg", ".gif", ".svg", ".ico", ".webp",
      ".woff", ".woff2", ".ttf", ".eot", ".otf",
      ".mp4", ".webm", ".pdf", ".txt", ".xml", ".zip"
    ],
    "description": "安全配置"
  },
  "deployment": {
    "auto_config_frontend": true,
    "create_config_file": true,
    "backup_original": true,
    "description": "智能部署配置，自动适应不同服务器环境"
  },
  "migration": {
    "enabled": true,
    "auto_update_database_config": false,
    "database_config_path": "./server/db.js",
    "description": "服务器迁移配置，暂不自动修改数据库配置"
  }
}
